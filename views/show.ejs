<%- include('./partials/navbar') %>
    <%- layout('./layout/boilerplate') %>

        <div class="container mt-4">
            <p><a class="link" href="/books">Go Back</a></p>
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="<%= fetchBook.imageURL %>" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= fetchBook.title %>
                            </h5>
                            <p class="card-text">
                                <%= fetchBook.author %>
                            </p>
                            <p class="card-text"><small class="text-body-secondary">
                                    <%= fetchBook.publishYear %>
                                </small></p>
                            <a class="btn btn-info" href="/books/edit/<%=fetchBook._id%>">Update</a>
                            <form action="/books/<%=fetchBook._id%>?_method=DELETE" method="POST">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>